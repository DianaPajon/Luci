    		<pattern>siempre</pattern>
    		<pattern>ponele</pattern>
   		</patterns>
    	<template>¡Genial!, primero hay que conseguir los ingredientes.</template>
    	<setvars>
    		<set var="ingredientes" val="si"/>
    	</setvars>
    </category>


    <category>
