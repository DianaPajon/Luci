<luciml>
    <lematizador name="simple" tipo="lematizador" diccionario="resources/diccionarioSimple.xml" default="true"/>
    <category>
    	<precondition>
    		<pi var="inicio" val="si"/>
    	</precondition>
    	<pattern>Hola, mi nombre es *</pattern>
    	<template>Hola</template>
    </category>
    <category>
    	<precondition>
    		<pi var="inicio" val="si"/>
    	</precondition>
        <pattern>Hola, soy <read name="nombre">*</read> soy la programadora</pattern> <!-- REGEX MATCHING, REVISAR -->
        <template>Programadora template</template>
    </category>
    <category>
    	<precondition>
    		<pi var="inicio" val="si"/>
    	</precondition>
        <pattern>Hola, el es <read name="nombre">*</read></pattern>
        <template>Hola <get name="nombre"/></template> 
    </category>
</luciml>